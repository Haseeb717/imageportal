<div class="loginArea">
 	<div class="container">
    <h2 class="text-center wow fadeInDown">Forgot Password</h2>
    <div class="row">
       <div class="col-sm-offset-3 col-sm-6 col-sm-offset-3 col-md-offset-4 col-md-4 col-md-offset-4">
          <div class="form-section wow fadeInUp">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
								<%= devise_error_messages! %>
                <%= f.email_field :email, autofocus: true,:class=>"form-control",:placeholder=>"Email Address ...",:required=>true %>   		  
                <br />
                <p><%= f.submit "Submit",:class=>"btn loginBtn hvr-sink" %>  </p>
             <% end %>
             <br />
          </div>
       </div>
    </div>
 	</div>
</div>