<div class="loginArea">
  <div class="container">
    <h2 class="text-center wow fadeInDown">Forgot Password</h2>
    <div class="row">
       <div class="col-sm-offset-3 col-sm-6 col-sm-offset-3 col-md-offset-4 col-md-4 col-md-offset-4">
          <div class="form-section wow fadeInUp">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= devise_error_messages! %>
                <%= f.hidden_field :reset_password_token %>

                <%= f.password_field :password, autofocus: true, autocomplete: "off",:class=>"form-control",:placeholder=>"Enter New Password",:required=>true %>
                <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off",:class=>"form-control",:placeholder=>"Confirm New Password",:required=>true %>         
                <br />
                <p><%= f.submit "Change my password",:class=>"btn loginBtn hvr-sink" %>  </p>
             <% end %>
             <br />
          </div>
       </div>
    </div>
  </div>
</div>