  <div class="loginArea">
     <div class="container">
        <h2 class="text-center wow fadeInDown">Create Item</h2>
        <div class="row">
           <div class="col-sm-offset-3 col-sm-6 col-sm-offset-3 col-md-offset-4 col-md-4 col-md-offset-4">
              <div class="form-section wow fadeInUp">
                <%= form_for(@item) do |f| %>
                  <%= render "/layouts/alerts" %>

                  <%= f.text_field :title, autofocus: true,:class=>"form-control",:placeholder=>"Enter Title",:required=>true %>

                  <%= f.select :category_id,Category.all.collect {|p| [ p.title, p.id ] }, { :prompt => 'Select Category' }, {:class=>"form-control",:required=>true}  %>
                        
                  <%= f.hidden_field :user_id,:value=>current_user.id %>

                  <%= f.submit "Create",:class=>"btn loginBtn hvr-sink" %>
                <% end %>
                <br />
              </div>
           </div>
        </div>
     </div>
  </div>
<!-- login -->