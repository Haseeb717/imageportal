<div class="loginArera">
  <div class="container">
      <h2 class="text-center">Create Item</h2>
      <div class="blueline"></div>
      <br />
      <div class="row">
        <div class="col-md-offset-2 col-md-7 col-md-offset-3">
          <%= form_for(@item,:html => {:class => 'form-horizontal'}) do |f| %>
            <%= render "/layouts/alerts" %>

            <div class="form-group">
              <label class="col-sm-4 control-label">Title:</label>
              <div class="col-sm-8">
                <%= f.text_field :title, autofocus: true,:class=>"form-control",:placeholder=>"Enter Title",:required=>true %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-4 control-label">Category:</label>
              <div class="col-sm-8">
                <%= f.select :category_id,Category.all.collect {|p| [ p.title, p.id ] }, { :prompt => 'Select Category' }, {:class=>"form-control",:required=>true}  %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-4 control-label">Url:</label>
              <div class="col-sm-8">
                <%= f.text_field :image_url,:class=>"form-control",:placeholder=>"Image Url",:required=>true %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-4 control-label">Description:</label>
              <div class="col-sm-8">
                <%= f.text_area :description, :class=>"form-control",:placeholder=>"Description",:required=>true,:rows=>"5" %>
              </div>
            </div>
            <%= f.hidden_field :user_id,:value=>current_user.id %>
            
            <div class="form-group">
              <div class="pull-right">
                <p><%= f.submit "CREATE",:class=>"btn loginBtn hvr-sink" %></p>
              </div>
            </div>

          <% end %>
        </div>
      </div>
  </div>
</div>
<!-- login -->
